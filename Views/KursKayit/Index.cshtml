@model IEnumerable<KursKayit>
    <h2>Kurs Kayıt listesi</h2>
    <hr>
    <a href="/kurskayit/create" class="btn btn-primary mb-3">Kurs Kaydı Ekle</a>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th style="width: 150px;">@Html.DisplayNameFor(m=>m.KursKayitId)</th>
                <th>@Html.DisplayNameFor(m=>m.Ogrenci.OgrenciAd)</th>
                <th>@Html.DisplayNameFor(m=>m.Kurs.Baslik)</th>


                <th style="width: 150px;">Action</th>

            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
            <tr>
                <td>@Html.DisplayFor(modelItem=> item.KursKayitId)</td>
                <td>@Html.DisplayFor(modelItem=> item.Ogrenci.OgrenciAd)</td>
                <td>@Html.DisplayFor(modelItem=> item.Kurs.Baslik)</td>


                <td>
                    <a asp-controller="KursKayit" asp-action="Edit" asp-route-id="@item.KursKayitId"
                        class="btn btn-sm btn-primary">Edit</a>
                    <a sp-controller="kursKayit" asp-action="Delete" asp-route-id="@item.KursKayitId"
                        class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
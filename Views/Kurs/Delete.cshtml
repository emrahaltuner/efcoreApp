@model Kurs
@{
ViewData["Title"] = "Kurs Silme";
}
<p>
    <b>@Model.Baslik </b> isimli kaydı silmek istiyor musunuz?
</p>
<form asp-action="Delete" method="post">
    <input type="hidden" value="@Model.KursId" name="id">
    <button type="submit" class="btn btn-danger">Evet</button>
    <a asp-action="Index" class="btn btn-primary">Hayır</a>
</form>
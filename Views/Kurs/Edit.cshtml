@model Kurs
@{
ViewData["Title"] = "Kurs Güncelleme";
}
<div class="row">
    <div class="col-8">
        <div class="form-group">
            <form asp-controller="Kurs" asp-action="Edit" method="post">
                <input type="hidden" asp-for="KursId">
                <div class="mb-3">
                    <label asp-for="Baslik" class="form-label">Kurs Başlık</label>
                    <input asp-for="Baslik" class="form-control">
                </div>
                <div class="mb-3">
                    <label asp-for="OgretmenId" class="form-label">Kurs Başlık</label>
                    <select asp-for="OgretmenId" asp-items="ViewBag.Ogretmenler" class="form-select">
                        <option value="">Kurs Öğretmeni Seçin</option>
                    </select>
                </div>

                <button type="submit" class="btn btn-secondary">Ekle</button>
            </form>
        </div>
    </div>
    <div class="col-4">
        <h4>Öğrenciler</h4>
        <hr>
        <ul>
            @foreach(var item in @Model.KursKayitlari)
            {
            <li>@item.Ogrenci.AdSoyad</li>
            }
        </ul>
        <h4>Öğretmen</h4>
        <hr>
        <ul>

            <li>@Model.Ogretmen.AdSoyad</li>

        </ul>
    </div>
</div>
@model KursKayit
@{
ViewData["Title"] = "Öğrenci Kurs Kaydı";
}
<h2>Öğrenci Kurs Ekle</h2>
<div class="form-group">
    <form asp-controller="KursKayit" asp-action="Create" method="post">
        <div class="mb-3">
            <label asp-for="OgrenciId" class="form-label">Öğrenci Seçi</label>
            <select asp-for="OgrenciId" asp-items="ViewBag.Ogrenciler" class="form-control">
                <option value="">Seçiniz</option>
            </select>
        </div>
        <div class="mb-3">
            <label asp-for="KursId" class="form-label">Kurs Başlık</label>
            <select asp-for="KursId" asp-items="ViewBag.Kurslar" class="form-control">
                <option value="">Seçiniz</option>
            </select>
        </div>

        <button type="submit" class="btn btn-secondary">Ekle</button>
    </form>
</div>